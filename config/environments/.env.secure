# üîí COINBITCLUB SECURE ENVIRONMENT CONFIGURATION
# ===============================================
# Arquivo seguro sem chaves expostas - usar Railway Variables

# System Configuration
NODE_ENV=production
PORT=3000
TZ=America/Sao_Paulo

# Feature Flags
ENABLE_REAL_TRADING=true
TESTNET_MODE=true
POSITION_SAFETY_ENABLED=true
ANALYTICS_ENABLED=true
MANDATORY_STOP_LOSS=true
MANDATORY_TAKE_PROFIT=true

# Security Settings
MAX_LEVERAGE=10
MAX_RISK_PER_TRADE=0.05
POSITION_TIMEOUT_MINUTES=120

# Business Rules - Commission Rates (%)
COMMISSION_MONTHLY_BRAZIL=10
COMMISSION_MONTHLY_FOREIGN=10
COMMISSION_PREPAID_BRAZIL=20
COMMISSION_PREPAID_FOREIGN=20

# Affiliate Rates (% of total commission)
AFFILIATE_NORMAL_SHARE=1.5
AFFILIATE_VIP_SHARE=5.0

# Minimum Balances
MINIMUM_PREPAID_BRAZIL_BRL=100
MINIMUM_PREPAID_FOREIGN_USD=20

# Exchange Rate API
EXCHANGE_RATE_API=https://api.exchangerate-api.com/v4/latest/USD

# Position Monitoring
TOP_100_COINS_THRESHOLD=90
FEAR_GREED_LONG_THRESHOLD=30
FEAR_GREED_SHORT_THRESHOLD=80

# Signal Processing
SIGNAL_VALIDITY_SECONDS=120
TICKER_BLOCK_HOURS=2
MAX_POSITIONS_PER_USER=2

# Trading Parameters Default
DEFAULT_LEVERAGE=5
DEFAULT_SL_MULTIPLIER=2
DEFAULT_TP_MULTIPLIER=3
DEFAULT_POSITION_SIZE_PERCENT=30
MAX_POSITION_SIZE_PERCENT=50

