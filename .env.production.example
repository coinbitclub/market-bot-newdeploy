# 🇱🇹 CoinBitClub Enterprise - VPS Lituânia Configuration
# ===========================================================
# Configuração de ambiente para produção no VPS da Hostinger
# IP: 31.97.72.77 | Vilnius, Lituânia | Ubuntu 24.04 LTS

# ========================================
# SISTEMA E INFRAESTRUTURA
# ========================================
NODE_ENV=production
PORT=3000
TZ=Europe/Vilnius

# VPS Information
VPS_LOCATION=lithuania
VPS_CITY=vilnius  
VPS_IP=31.97.72.77
VPS_HOSTNAME=srv987989.hstgr.cloud
VPS_PROVIDER=hostinger

# ========================================
# ORQUESTRAMENTO E ESCALABILIDADE
# ========================================
CLUSTER_MODE=swarm
CLUSTER_MIN_WORKERS=8
CLUSTER_MAX_WORKERS=32
SCALE_UP_THRESHOLD=80
SCALE_DOWN_THRESHOLD=30

# Docker Swarm
DOCKER_STACK_NAME=coinbitclub-prod
DOCKER_NETWORK=coinbitclub-network

# ========================================
# DATABASE - POSTGRESQL MASTER-SLAVE
# ========================================
# Master Database
DATABASE_URL=postgresql://postgres:CHANGE_THIS_PASSWORD@postgres-master:5432/trading

# Read Replicas
DB_READ_REPLICA_1=postgresql://postgres:CHANGE_THIS_PASSWORD@postgres-replica-1:5432/trading
DB_READ_REPLICA_2=postgresql://postgres:CHANGE_THIS_PASSWORD@postgres-replica-2:5432/trading
DB_READ_REPLICA_3=postgresql://postgres:CHANGE_THIS_PASSWORD@postgres-replica-3:5432/trading

# Database Credentials
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_USER=postgres
POSTGRES_DB=trading

# Replication
POSTGRES_REPLICATION_USER=replicator
REPLICATION_PASSWORD=CHANGE_THIS_REPLICATION_PASSWORD

# Connection Pool
DB_POOL_MIN=5
DB_POOL_MAX=50
DB_POOL_IDLE_TIMEOUT=30000
DB_REPLICA_HEALTH_CHECK_INTERVAL=15000

# ========================================
# REDIS CLUSTER (MESSAGE QUEUE)
# ========================================
REDIS_URL=redis://redis-cluster-1:6379
REDIS_CLUSTER_NODES=redis-cluster-1:6379,redis-cluster-2:6379,redis-cluster-3:6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_DB=0

# Message Queue Configuration
QUEUE_HIGH_WORKERS=4
QUEUE_MEDIUM_WORKERS=3
QUEUE_LOW_WORKERS=2
QUEUE_BACKGROUND_WORKERS=1

# Queue Priorities
QUEUE_TRADING_PRIORITY=urgent
QUEUE_FINANCIAL_PRIORITY=high
QUEUE_NOTIFICATION_PRIORITY=normal
QUEUE_ANALYTICS_PRIORITY=low

# ========================================
# BINANCE API (PRODUÇÃO)
# ========================================
BINANCE_API_KEY=YOUR_BINANCE_API_KEY_HERE
BINANCE_SECRET_KEY=YOUR_BINANCE_SECRET_KEY_HERE
BINANCE_TESTNET=false
BINANCE_BASE_URL=https://api.binance.com

# Binance Configuration
BINANCE_RATE_LIMIT=1200
BINANCE_TIMEOUT=10000
BINANCE_RECVWINDOW=5000

# ========================================
# BYBIT API (PRODUÇÃO)
# ========================================
BYBIT_API_KEY=YOUR_BYBIT_API_KEY_HERE
BYBIT_SECRET_KEY=YOUR_BYBIT_SECRET_KEY_HERE
BYBIT_TESTNET=false
BYBIT_BASE_URL=https://api.bybit.com

# Bybit Configuration
BYBIT_RATE_LIMIT=600
BYBIT_TIMEOUT=10000
BYBIT_RECV_WINDOW=5000

# ========================================
# SEGURANÇA E AUTENTICAÇÃO
# ========================================
JWT_SECRET=CHANGE_THIS_JWT_SECRET_VERY_LONG_AND_SECURE
JWT_EXPIRE_TIME=24h
JWT_REFRESH_EXPIRE_TIME=7d

ENCRYPTION_KEY=CHANGE_THIS_ENCRYPTION_KEY_32_CHARS
ENCRYPTION_ALGORITHM=aes-256-gcm

# API Security
API_RATE_LIMIT=100
API_RATE_WINDOW=900000
API_MAX_REQUESTS_PER_IP=1000

# Session Security
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET
SESSION_TIMEOUT=3600000

# ========================================
# MONITORAMENTO E OBSERVABILIDADE
# ========================================
# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_SCRAPE_INTERVAL=15s
PROMETHEUS_RETENTION=30d

# Grafana
GRAFANA_ENABLED=true
GRAFANA_PORT=3001
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD
GRAFANA_ADMIN_USER=admin

# Alerting
MONITORING_ALERT_COOLDOWN=300000
ALERT_EMAIL=admin@coinbitclub.com
ALERT_WEBHOOK_URL=

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Metrics
METRICS_ENABLED=true
METRICS_INTERVAL=30000
HEALTH_CHECK_INTERVAL=30000

# ========================================
# LOAD BALANCER - NGINX
# ========================================
NGINX_UPSTREAM_SERVERS=trading-app:3000
NGINX_RATE_LIMIT_API=10r/s
NGINX_RATE_LIMIT_TRADING=5r/s
NGINX_CLIENT_MAX_BODY_SIZE=10M
NGINX_PROXY_TIMEOUT=60s

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ========================================
# APLICAÇÃO TRADING
# ========================================
# Trading Configuration
MAX_OPEN_POSITIONS=50
MAX_DAILY_TRADES=100
RISK_MANAGEMENT=true
AUTO_TRADING_ENABLED=true

# Position Sizing
DEFAULT_POSITION_SIZE=0.01
MAX_POSITION_SIZE=0.1
RISK_PER_TRADE=0.02

# Trading Pairs
TRADING_PAIRS=BTCUSDT,ETHUSDT,BNBUSDT,ADAUSDT,DOTUSDT,LINKUSDT

# ========================================
# SISTEMA FINANCEIRO
# ========================================
# Currency
DEFAULT_CURRENCY=USDT
SUPPORTED_CURRENCIES=USDT,BTC,ETH,BNB

# Financial Limits
MIN_DEPOSIT=10
MAX_DEPOSIT=10000
MIN_WITHDRAWAL=5
MAX_WITHDRAWAL=5000

# Fees
TRADING_FEE=0.001
WITHDRAWAL_FEE=0.0005

# ========================================
# NOTIFICAÇÕES
# ========================================
# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@coinbitclub.com

# WhatsApp (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Notification Settings
NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS=true
SMS_NOTIFICATIONS=false
TELEGRAM_NOTIFICATIONS=true

# ========================================
# BACKUP E DISASTER RECOVERY
# ========================================
# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/var/backups/coinbitclub

# S3 Backup (Optional)
AWS_S3_BUCKET=coinbitclub-backups
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=eu-north-1

# ========================================
# COMPLIANCE E LEGAL
# ========================================
# Geographic Compliance
ALLOWED_COUNTRIES=LT,EE,LV,FI,SE,NO,DK,DE,FR,NL,BE,AT,CH
BLOCKED_COUNTRIES=US,CN,JP
GEO_RESTRICTION_ENABLED=true

# KYC/AML
KYC_REQUIRED=true
AML_MONITORING=true
SUSPICIOUS_ACTIVITY_THRESHOLD=1000

# Data Protection
GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=2555
PRIVACY_POLICY_VERSION=2.0

# ========================================
# PERFORMANCE E OTIMIZAÇÃO
# ========================================
# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000
CACHE_ENABLED=true

# Connection Timeouts
HTTP_TIMEOUT=30000
WEBSOCKET_TIMEOUT=60000
DATABASE_TIMEOUT=10000

# Memory Management
NODE_OPTIONS=--max-old-space-size=4096
UV_THREADPOOL_SIZE=32

# ========================================
# DESENVOLVIMENTO E DEBUG
# ========================================
# Debug (Only for development)
DEBUG=false
VERBOSE_LOGGING=false
API_DOCS_ENABLED=false
SWAGGER_ENABLED=false

# Testing
TEST_MODE=false
MOCK_APIS=false
DEMO_TRADING=false

# ========================================
# HEALTH CHECKS E STATUS
# ========================================
HEALTH_CHECK_ENDPOINT=/health
STATUS_ENDPOINT=/api/enterprise/status
METRICS_ENDPOINT=/api/metrics

# Service Status
TRADING_SERVICE_ENABLED=true
FINANCIAL_SERVICE_ENABLED=true
NOTIFICATION_SERVICE_ENABLED=true
ANALYTICS_SERVICE_ENABLED=true

