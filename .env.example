# =====================================
# COINBITCLUB MARKET BOT - ENV EXAMPLE  
# =====================================

# 🔧 SISTEMA PRINCIPAL
NODE_ENV=production
PORT=3000
ENABLE_REAL_TRADING=false

# 🗄️ DATABASE
DATABASE_URL=postgresql://username:password@host:port/database

# 🔑 EXCHANGES API KEYS
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_secret_here
BYBIT_API_KEY=your_bybit_api_key_here  
BYBIT_API_SECRET=your_bybit_secret_here

# 🧪 TESTNET (Opcional)
BINANCE_TESTNET_API_KEY=your_testnet_key_here
BINANCE_TESTNET_API_SECRET=your_testnet_secret_here
BYBIT_TESTNET_API_KEY=your_testnet_key_here
BYBIT_TESTNET_API_SECRET=your_testnet_secret_here

# 🌐 NGROK (Para IP Fixo)
NGROK_AUTH_TOKEN=your_ngrok_token_here
NGROK_REGION=us
NGROK_SUBDOMAIN=coinbitclub-bot

# 🤖 AI/OPENAI
OPENAI_API_KEY=your_openai_api_key_here

# 📱 SMS/NOTIFICATIONS (Opcional)
TWILIO_ACCOUNT_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_token_here

# 💳 PAYMENTS (Opcional)
STRIPE_SECRET_KEY=your_stripe_secret_here
STRIPE_PUBLISHABLE_KEY=your_stripe_public_here

# 🔐 SEGURANÇA
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# 🎯 SISTEMA DE PRIORIZAÇÃO (Ativo)
SMART_HYBRID_MODE=true
RAILWAY_ENVIRONMENT_NAME=management

# 📊 MÉTRICAS E MONITORAMENTO
ENABLE_MONITORING=true
ENABLE_LOGGING=true

# 🔄 CoinStats API (Para análise de mercado)
COINSTATS_API_KEY=your_coinstats_api_key_here

# ⚙️ CONFIGURAÇÕES AVANÇADAS
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# ⚠️ IMPORTANTE:
# - Substitua todos os valores 'your_*_here' pelos valores reais
# - Mantenha este arquivo seguro e nunca commite no git
# - Use process.env.VARIABLE_NAME no código
# - Configure no Railway/Vercel/Heroku através do painel
