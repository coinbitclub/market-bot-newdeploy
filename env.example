# Database Configuration for Deployment
# Copy this file to .env and update with your actual database credentials

# Option 1: Use DATABASE_URL (recommended for most hosting platforms)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Option 2: Use individual database variables
DB_HOST=your-database-host.com
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_username
DB_PASSWORD=your_password

# Alternative naming conventions (some platforms use these)
POSTGRES_URL=postgresql://username:password@host:port/database_name
POSTGRES_HOST=your-database-host.com
POSTGRES_PORT=5432
POSTGRES_DB=your_database_name
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password

# Master-Slave Configuration (if using connection pool manager)
DB_MASTER_HOST=your-database-host.com
DB_MASTER_PORT=5432

# Pool Configuration
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_IDLE_TIMEOUT=30000
DB_REPLICA_HEALTH_CHECK_INTERVAL=15000

# Environment
NODE_ENV=production

# Example for Railway:
# DATABASE_URL=postgresql://postgres:password@containers-us-west-xyz.railway.app:5432/railway

# Example for Heroku:
# DATABASE_URL=postgres://username:password@hostname:5432/database

# Example for DigitalOcean:
# DATABASE_URL=postgresql://username:password@db-postgresql-nyc1-12345-do-user-123456-0.db.ondigitalocean.com:25060/defaultdb?sslmode=require
